<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/register"><i class="fas fa-angle-double-left"></i> Register</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Login</h2>
    </div>
    <!-- form handling -->
    <form action="/api/login" method="POST" id="add_user">
      <div class="new_user">
        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input type="email" name="email" class="form-input" value="" required/>
        </div>
        <div class="form-group">
          <label for="password" class="text-light">Password</label>
          <input type="password" name="password" class="form-input" value="" required/>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Login</button>
        </div>
       
      </div>
    </form>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
