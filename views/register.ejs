<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/login"><i class="fas fa-angle-double-left"></i> Login</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Register</h2>
      <span class="text-light">Use the below form to create a new account</span>
    </div>
    <!-- form handling -->
    <form action="/api/register" method="POST" id="add_user">
      <div class="new_user">
        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            type="email"
            name="email"
            class="form-input"
            value=""
            required
          />
        </div>
        <div class="form-group">
          <label for="password" class="text-light">Password</label>
          <input
            type="password"
            name="password"
            class="form-input"
            value=""
            required
          />
        </div>
        <div class="form-group">
          <label for="role" class="text-light">Role</label>
          <div class="radio inline">
            <input type="radio" id="radio-1" name="role" value="admin" />
            <label for="radio-1" class="radio-label">Admin</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="role" value="qamanager" />
            <label for="radio-2" class="radio-label">QA Manager</label>
          </div>
          <div class="radio inline">
            <input
              type="radio"
              id="radio-3"
              name="role"
              value="qacoordinator"
            />
            <label for="radio-3" class="radio-label">QA Coordinator</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="role" value="staff" />
            <label for="radio-4" class="radio-label">Staff</label>
          </div>
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Sign up</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
